{
    "languageserver": {
        "bash": {
            "args": [
                "start"
            ],
            "command": "bash-language-server",
            "filetypes": [
                "sh"
            ],
            "ignoredRootPaths": [
                "~"
            ]
        },
        "clangd": {
            "command": "clangd",
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                ".vim/",
                "compile_flags.txt",
                "compile_commands.json"
            ]
        },
        "cmake": {
            "command": "cmake-language-server",
            "filetypes": [
                "cmake"
            ],
            "initializationOptions": {
                "buildDirectory": "build"
            },
            "rootPatterns": [
                "build/"
            ]
        },
        "golang": {
            "command": "gopls",
            "filetypes": [
                "go"
            ],
            "rootPatterns": [
                "go.mod",
                ".vim/",
                ".git/",
                ".hg/"
            ]
        }
    }
}
